---
import '@utils/register-services';
import HtmlLayout from '@components/shared/HtmlLayout.astro';
import { Text } from '@ui/components/Text';
import { Container } from '@ui/components/Container';
import { getHelloWorldService } from '@application/shared/IHelloWorldService';
import Counter from '@presentation/features/Counter';

const { greeting } = getHelloWorldService().getGreeting();
---

<HtmlLayout>
  <Container>
    <Text>{greeting}</Text>
    <Counter client:load />
  </Container>
</HtmlLayout>